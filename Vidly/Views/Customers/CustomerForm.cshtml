@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Action == "new_customer")
{
    <h2>Add New Customer</h2>
}
else
{
    <h2>Edit Customer Details</h2>

}


@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m=> m.Customer.Name)
        @Html.TextBoxFor(m =>m.Customer.Name, new { @class="form-control" })
    </div>

    <div class="form-group" >
        @Html.LabelFor(m=>m.Customer.BirthDay)
        @Html.TextBoxFor(m=>m.Customer.BirthDay, "{0:d MMM yyyy}" , new { @class="form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes,"Id", "MembershipName"),"Select Memebership Type", new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter, new { @class = "checkbox" }) Is Subscribed to News Letter?
        </label>
    </div>
    @Html.HiddenFor(m=>m.Customer.Id);
    <button class="btn btn-primary">Save</button>
}