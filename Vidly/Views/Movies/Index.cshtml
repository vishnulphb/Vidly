@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>
                Movie List
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var movie in Model)
            {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }


    </tbody>
</table>



